{
  "name": "lendfriend-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "LendFriend - Revenue-based financing platform",
  "workspaces": [
    "apps/web",
    "apps/farcaster"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:farcaster": "npm run dev --workspace=apps/farcaster",
    "build:web": "npm run build --workspace=apps/web",
    "build:farcaster": "npm run build --workspace=apps/farcaster",
    "build": "npm run build:web && npm run build:farcaster"
  }
}
